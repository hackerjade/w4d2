<ul>
      <% if @cat.errors   %>
      <% @cat.errors.full_messages.each do |error| %>
    <li> <%= error %> </li>
        <% end %>
      <% end %>
</ul>

<form action=<%= form_action %> method="post">
  <input type="hidden" name="_method" value=<%=form_value%>>
  <label for="cat_name">Full Name</label>
  <input type="text" name= "cat[name]" id="cat_name" value=<%=@cat.name%>>
  <br>
  <br>

  <input type="radio" name="cat[sex]"
                      id="cat_sex_female"
                      value="F"
                      <%="checked" if @cat.sex == "F"%>>
  <label for="cat_sex_female">Female</label>

  <input type="radio" name="cat[sex]"
                      id="cat_sex_male"
                      value="M"
                      <%="checked" if @cat.sex == "M"%>>
  <label for="cat_sex_male">Male</label>

  <br>
  <br>

  <label for="cat_color">Coat Color</label>
  <select name="cat[color]" id="cat_color">
    <option value="">Choose Color</option>
    <option value="red" <%="selected" if @cat.color == "red"%>>red</option>
    <option value="green" <%="selected" if @cat.color == "green"%>>green</option>
    <option value="blue" <%="selected" if @cat.color == "blue"%>>blue</option>
  </select>
  <br>
  <br>

  <label for="cat_birth_date">Birthday</label>
  <input type="date" name="cat[birth_date]"
                      id= "cat_birth_date"
                      value=<%=@cat.birth_date%>>
  <br>
  <br>


  <label for="cat_description">Cat's Description:</label>
  <br>
  <textarea name="cat[description]"
            id="cat_description"
            ><%= @cat.description %></textarea>
  <br>
  <br>

  <input type="submit" value=<%=submit_button_value%>>
</form>
